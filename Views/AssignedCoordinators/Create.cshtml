@model InternshipDotCom.Models.AssignedCoordinator

@{
    ViewData["Title"] = "Create";
}



<div class="container w-50">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Assig Coordinator </h2>
        </div>
            <div class="card-body">
                <form asp-action="Create" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label for="ApplicationUserId">Coordinator</label>
                        <select id="ApplicationUserId" asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId" required>
                            <option value="">--Select Coordinator--</option>
                        </select>
                        <div class="invalid-feedback">Please select a coordinator.</div>
                    </div>

                    <div class="form-group">
                        <label for="UniversityId">University</label>
                        <select id="UniversityId" asp-for="UniversityId" class="form-control" asp-items="ViewBag.UniversityId" required>
                            <option value="">--Select University--</option>
                        </select>
                        <div class="invalid-feedback">Please select a university.</div>
                    </div>

                    <div class="form-group">
                        <label for="DepartmentId">Department</label>
                        <select id="DepartmentId" asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId" required>
                            <option value="">--Select Department--</option>
                        </select>
                        <div class="invalid-feedback">Please select a department.</div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Assign</button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Disable form submission if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var form = document.getElementById('form');
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            }, false);
        })();
    </script>
}
