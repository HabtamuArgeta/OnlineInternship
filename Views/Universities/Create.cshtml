@model InternshipDotCom.Models.University

@{
    ViewData["Title"] = "Create University";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a layout for consistent styling
}

<div class="container w-50">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Add New University</h2>
        </div>
        <div class="card-body ">
            
         
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="name" class="control-label">University Name</label>
                    <input asp-for="name" class="form-control" required />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
