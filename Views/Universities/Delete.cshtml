@model InternshipDotCom.Models.University

@{
    ViewData["Title"] = "Delete University";
}

<div class="card" >
    <div class="card-header" style="background-color: orangered;">
        <h2 class="text-center">Delete University</h2>
    </div>
    <div class="card-body" style="background-color: #ffcccc;">
        <h4 class="card-title">Are you sure you want to delete this university?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">University Name:</dt>
            <dd class="col-sm-9">@Model.name</dd>
        </dl>
        <form asp-action="Delete" method="post" class="mb-3">
            <input type="hidden" asp-for="id" />
            <button type="submit" class="btn btn-danger mr-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
