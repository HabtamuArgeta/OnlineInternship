@model InternshipDotCom.Models.University

@{
    ViewData["Title"] = "University Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a layout for consistent styling
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">University Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">University name:</dt>
                <dd class="col-sm-9">@Model.name</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
