@model IEnumerable<InternshipDotCom.Models.University>

@{
    ViewData["Title"] = "University Index";
}

<h1 class="text-center">Added Universities </h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New University</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var university in Model)
            {
                if (university.id == 1)
                {
                    continue; // Skip the department with Id = 1
                }
                
                <tr>
                    <td>@university.name</td>
                    <td>
                       
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@university.id">
                            <i class="fas fa-edit"></i> Edit
                        </a>

                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@university.id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                       
                    </td>
                </tr>

               
            }
        </tbody>
    </table>
</div>
