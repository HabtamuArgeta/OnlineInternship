@model InternshipDotCom.Models.Internship

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Internship</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="InternshipName" class="control-label"></label>
                <input asp-for="InternshipName" class="form-control" />
                <span asp-validation-for="InternshipName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InternshipType" class="control-label"></label>
                <input asp-for="InternshipType" class="form-control" />
                <span asp-validation-for="InternshipType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfApplicant" class="control-label"></label>
                <input asp-for="NumberOfApplicant" class="form-control" />
                <span asp-validation-for="NumberOfApplicant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label">Organization</label>
                <select asp-for="OrganizationId" class="form-control" asp-items="ViewBag.OrganizationId">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" id="formFile">
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
