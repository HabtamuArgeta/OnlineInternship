@model InternshipDotCom.Models.Organization

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a layout for consistent styling
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Companey Details</h2>
        </div>
        <div class="card-body">
            
            <dl class="row">
                <dt class="col-sm-3">Companey Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OrganizationName)</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> 
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
