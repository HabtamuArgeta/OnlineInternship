@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Internship Application</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        /* Add custom styles here */
        .jumbotron {
            background: linear-gradient(to bottom, rgba(0,0,0,0.6) 0%,rgba(0,0,0,0.6) 100%), url('https://source.unsplash.com/1600x900/?internship') center/cover;
            color: #fff;
            padding: 2rem;
            border-radius: 0;
            text-align: center;
        }
        .testimonial {
            padding: 4rem 0;
            background-color: #f8f9fa;
            text-align: center;
        }
        .testimonial img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-bottom: 20px;
        }
        .testimonial p {
            font-style: italic;
            font-size: 1.2rem;
            margin-bottom: 30px;
        }
        .carousel-item {
            text-align: center;
        }
        .carousel-control-prev-icon{
            color: red;
            background-color: black;
        }
        .carousel-control-next-icon{
            color: red;
            background-color: black;

        }
        
        
    </style>
</head>
<body>
    <!-- Common Welcome Section -->
    <div class="container-fluid mt-5">
        <div class="jumbotron">
            <h1 class="display-4">Welcome to Our Internship Program!</h1>
            <p class="lead">Try the better experiences here with us.</p>
            <hr class="my-4">
            <div class="row">
                <div class="col-md-6">
                    <p>If you are an organization:</p>
                    <p>Post internship opportunities and find talented interns.</p>
                    <p>Expand your team with motivated individuals eager to learn.</p>
                    <a class="btn btn-primary btn-lg" href="#" role="button">Get Started</a>
                </div>
                <div class="col-md-6">
                    <p>If you are an applicant:</p>
                    <p>Apply for exciting internship opportunities.</p>
                    <p>Explore our website to learn more about our program and how to apply.</p>
                    <a class="btn btn-primary btn-lg" href="#" role="button">Apply Now</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonial Section -->
    <div class="testimonial">
    <div class="container mt-5">
        <h2 class="text-center mb-4">What Our Users Say</h2>
        <div id="testimonialCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://source.unsplash.com/100x100/?person" class="rounded-circle" alt="Testimonial 1">
                    <p>"This internship provided me with valuable skills and experiences that I'll carry with me throughout my career."</p>
                    <h5>- John Doe</h5>
                </div>
                <div class="carousel-item">
                    <img src="https://source.unsplash.com/100x100/?person" class="rounded-circle" alt="Testimonial 2">
                    <p>"I had an amazing time working with the talented team and learning from industry experts."</p>
                    <h5>- Jane Smith</h5>
                </div>
                <div class="carousel-item">
                    <img src="https://source.unsplash.com/100x100/?person" class="rounded-circle" alt="Testimonial 3">
                    <p>"The internship program provided me with opportunities to grow both personally and professionally."</p>
                    <h5>- Michael Johnson</h5>
                </div>
                <div class="carousel-item">
                <img src="https://source.unsplash.com/100x100/?company" class="rounded-circle" alt="Testimonial 1">
                            <p>"The platform helped us find interns who brought fresh perspectives to our projects."</p>
                            <h5>- Organization1</h5>
                        </div>
                        <div class="carousel-item">
                            <img src="https://source.unsplash.com/100x100/?company" class="rounded-circle" alt="Testimonial 2">
                            <p>"We've had great success in finding interns who quickly became valuable team members."</p>
                            <h5>- Organization2</h5>
                        </div>
                    </div>

            <a class="carousel-control-prev" href="#testimonialCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#testimonialCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
   

    <!-- Bootstrap JS, jQuery, and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script> *@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

