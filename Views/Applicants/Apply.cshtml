@model InternshipDotCom.Models.ApplicantInternship

@{
    ViewData["Title"] = "Apply for Internship";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a layout for consistent styling
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Apply for Internship</h2>
                </div>
                <div class="card-body">
                    <form asp-action="ApplyForInternship" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="InternshipId" value="@ViewBag.InternshipId" />
                        <input type="hidden" asp-for="ApplicationUserId" value="@ViewBag.ApplicationUserId" />

                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" value="@ViewBag.FirstName" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" class="control-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" value="@ViewBag.LastName" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="UniversityId" class="control-label">University</label>
                            <select asp-for="UniversityId" class="form-control" asp-items="ViewBag.UniversityId">
                                <option value="">--Select University--</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="DepartmentId" class="control-label">Department</label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId">
                                <option value="">--Select Department--</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="YearOfStudyId" class="control-label">Year of Study</label>
                            <select asp-for="YearOfStudyId" class="form-control" asp-items="ViewBag.YearOfStudyId">
                                <option value="">--Select Year of Study--</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="CoverLetter" class="control-label">Cover Letter</label>
                            <textarea asp-for="CoverLetter" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="CoverLetter" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Resume" class="control-label">Resume / CV</label>
                            <input asp-for="Resume" class="form-control" type="file" />
                            <span asp-validation-for="Resume" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="IsApplied" value="true" />

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Apply</button>
                            <a asp-action="PostedInternship" class="btn btn-secondary">Back </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
